<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.AddQuizTytActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_left_arrow"
        android:layout_marginTop="-120px"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:onClick="backTo"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:useDefaultMargins="true"
            android:layout_gravity="center_horizontal"
            android:rowCount="250"
            android:columnCount="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/toolbar_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TYT Deneme Sonuçları"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="8"
                android:background="@drawable/toolbar_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Türkçe (40)"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_weight="2"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/tytTurkceDogru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="D"
                    android:maxLength="2"
                    android:textColorHint="@android:color/holo_green_dark"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_weight="3"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLines="1"
                    android:background="@drawable/text_input"/>

                <EditText
                    android:id="@+id/tytTurkceYanlis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Y"
                    android:maxLength="2"
                    android:textColorHint="@android:color/holo_red_light"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_weight="3"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLines="1"
                    android:background="@drawable/text_input"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"

                android:weightSum="8"
                android:background="@drawable/toolbar_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sosyal Bil. (20)"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_weight="2"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/tytSosyalDogru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="D"
                    android:maxLength="2"
                    android:textColorHint="@android:color/holo_green_dark"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_weight="3"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLines="1"
                    android:background="@drawable/text_input"/>

                <EditText
                    android:id="@+id/tytSosyalYanlis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Y"
                    android:maxLength="2"
                    android:textColorHint="@android:color/holo_red_light"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_weight="3"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLines="1"
                    android:background="@drawable/text_input"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="8"
                android:background="@drawable/toolbar_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Matematik (40)"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_weight="2"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/tytMatematikDogru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="D"
                    android:maxLength="2"
                    android:textColorHint="@android:color/holo_green_dark"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_weight="3"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLines="1"
                    android:background="@drawable/text_input"/>

                <EditText
                    android:id="@+id/tytMatematikYanlis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Y"
                    android:maxLength="2"
                    android:textColorHint="@android:color/holo_red_light"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_weight="3"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLines="1"
                    android:background="@drawable/text_input"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="8"
                android:background="@drawable/toolbar_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fen Bilimleri (20)"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_weight="2"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/tytFenDogru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="D"
                    android:maxLength="2"
                    android:textColorHint="@android:color/holo_green_dark"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_weight="3"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLines="1"
                    android:background="@drawable/text_input"/>

                <EditText
                    android:id="@+id/tytFenYanlis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Y"
                    android:maxLength="2"
                    android:textColorHint="@android:color/holo_red_light"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_weight="3"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLines="1"
                    android:background="@drawable/text_input"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/toolbar_background">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/button"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Ekle"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="addQuiz"/>

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:paddingTop="15dp"
                    android:layout_marginBottom="15dp"/>

            </LinearLayout>

        </GridLayout>

    </ScrollView>

</LinearLayout>